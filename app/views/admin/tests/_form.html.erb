<%= form_with(model: [:admin, test], local: true) do |f| %>
  <div class = container">
    <div class="form-group field">
      <%= f.label :topic_id %>
      <%= f.text_field :topic_id, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :time %>
      <%= f.text_field :time, class: 'form-control' %>
    </div>

    <div class="form-group field">
      <%= f.label :status %>
        <br>
        <%= f.radio_button :status, 0 %>
        <%= f.label :status, "Public", :value => "0"  %>
        
        <%= f.radio_button :status, 1 %>
        <%= f.label :status, "Draff", :value => "1" %>
    </div>
    
    <div class="form-group field">
      <%= f.fields_for :questions do |question| %>
        <%= render 'question_fields', f: question %>
      <% end %>
    </div>

    <div class="link-questions">
      <%= link_to_add_association "Add Question", f, :questions, class: "btn btn-default" %>
    </div>

    <div class="actions">
      <%= f.submit button, class: 'btn btn-primary btn-md' %>
    </div>
  </div>
<% end %>
