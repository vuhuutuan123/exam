<div class="container">  
  <h1>DONE</h1>
  <p>Total : <%= @count_as %> / <%= @count_qs %></p>
  <p>Score : <%= @score %>
  <% @user_test.test.questions.each do |question| %>
    <ul>
      <li><%= question.content %>
        <ul class="option">   
          <% question.answers.each do |answer| %>
            <li>
              <% if answer.id == find_answer(question.id, @user_test.id).answer_id  %>
                <input type="radio" checked="true" disabled>
              <% else %>
                <input type="radio" disabled>
              <% end %>
              <%= answer.content %>
            </li>
          <% end %>
        </ul>
      </li>
      <%if find_answer(question.id, @user_test.id).answer_id == find_correct(question.id).id %>
        <p class="btn btn-success">Correct</p>
      <% else %>
        <p class="btn btn-danger">Wrong</p>
      <% end %>
    </ul>
  <% end %>
</div>
